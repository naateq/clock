{
    "compilerOptions": {
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "module": "amd", // 'none', 'commonjs', 'amd', 'system', 'umd', 'es6', or 'es2015'.
        "target": "es5",
        "outDir": "bin",
        "outFile": "bin/clock.html"
    },

    "files": [
        "src/tools/numbers.ts",
        "src/tools/calendar.lunar.ts",
        "src/tools/calendar.ts",
        "src/clock/analogclock.ts"
    ],

    "include": [
        "Contents/htmls/script_start.html",
        "Contents/htmls/script_end.html",
        "Contents/styles/*.css",
        "Contents/histories/*.js"
    ],

    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
