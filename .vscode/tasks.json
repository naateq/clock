{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "taskName": "drop",
            "type": "shell",
            "command": "./build/drop_resources.sh",
            "windows": {
                "command": "Powershell",
                "args": [
                    " -ExecutionPolicy", "Unrestricted",
                    "-NoProfile",
                    "-File", "${cwd}/build/drop_resources.ps1"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"                
            }
        },
        {
            "taskName": "clean",
            "type": "shell",
            "command": "./build/rm_all.sh",
            "windows": {
                "command": "Powershell",
                "args": [
                    " -ExecutionPolicy", "Unrestricted",
                    "-NoProfile",
                    "-File", "${cwd}/build/del_all.ps1"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"                
            }
        }
    ]
}